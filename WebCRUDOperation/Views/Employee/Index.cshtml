@model List<WebCRUDOperation.Models.TestEmployee>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table-bordered">
        <tr>
            <th>
                Ename
            </th>
            <th>
                Salary              
            </th>
            <th>
                Job              
            </th>
            <th>
                Dname           
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ename)
            </td>
            <td>               
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dname)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Eno }) |
                @Html.ActionLink("Details", "Details", new { id=item.Eno }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Eno })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
